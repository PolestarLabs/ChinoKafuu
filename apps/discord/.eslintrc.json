{
    "env": {
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "settings": {
        "jest": {
            "globalAliases": {
                "describe": [
                    "context"
                ],
                "fdescribe": [
                    "fcontext"
                ],
                "xdescribe": [
                    "xcontext"
                ]
            },
            "version": 27
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:security/recommended",
        "plugin:jest/recommended",
        "plugin:jest/style",
        "plugin:jest/all"
    ],
    // "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "globals": {
        "bigint": true,
        "window": true
    },
    "plugins": [
        "sort-class-members",
        "jest"
    ],
    "rules": {
        "jest/no-disabled-tests": "warn",
        "jest/no-focused-tests": "error",
        "jest/no-identical-title": "error",
        "jest/prefer-to-have-length": "warn",
        "jest/valid-expect": "error",
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1,
                "ignoreComments": true
            }
        ],
        "quotes": [
            2,
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "keyword-spacing": [
            2,
            {
                "after": true,
                "overrides": {
                    "if": {
                        "after": true
                    },
                    "switch": {
                        "after": true
                    },
                    "for": {
                        "after": true
                    },
                    "catch": {
                        "after": true
                    }
                }
            }
        ],
        "space-unary-ops": 2,
        "prefer-const": 2,
        "no-prototype-builtins": 0,
        "no-trailing-spaces": 2,
        "no-var": 2,
        "no-unused-vars": "warn",
        "lines-between-class-members": "error",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 1
            }
        ],
        "object-curly-spacing": [
            "warn",
            "always"
        ]
    }
}