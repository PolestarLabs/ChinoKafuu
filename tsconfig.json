{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./apps/revolt/build/",
    "rootDir": "./apps/revolt/src/",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false
  },
  "include": [
    "apps/revolt/src"
  ],
  "exclude": [
    "node_modules",
    "apps/revolt/build"
  ]
}
